
<div class = 'card'>
  <div class = 'card-header bg-secondary.bg-gradient'>
    <h2 class = "card-title d-flex justify-content-between mb-4">
      <span>Projects</span>
      <%= link_to 'New Project', new_project_path, class: 'btn 
      btn-primary' %>
    </h2>
  </div>

  <div class = 'card'>
    <div class = 'card-body'>
      <% @projects.each do |project| %>
        <%= link_to project, class: 'text-decoration-none' do%>
          <div class = 'card project-card mb-2'>
            <div class = 'card-body'>
              <div class = 'mb-3 d-flex'>
                <span class='<%= project.badge_status %>'><%= project.status %></span>
                     <div class = 'progress h-auto w-25'> 
                      <span class="progress-bar" role="progressbar" style="width: <%= project.percentage_complete %>%;" aria-valuenow="<%= project.percentage_complete %>" aria-valuemin="0" aria-valuemax="100"><%= project.percentage_complete %>%</span>
                      </div>
                      <span class='text-secondary'>
                        <small> 
                          (<%= project.total_complete %> / <%= project.total_tasks %>) tasks
                        </small>
                      </span>


                
              </div>
              <h5 class = 'card-title text-dark'><%= project.title %></h5>
              <p class='text-secondary'><%= project.description %></p>
            </div>
          </div>
        <% end %>
      <% end %>     
    </div>
  </div> 
</div>
